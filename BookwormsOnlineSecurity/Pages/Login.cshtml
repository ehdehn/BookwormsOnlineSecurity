@page
@model BookwormsOnlineSecurity.Pages.LoginModel
@{
    ViewData["Title"] = "Login - Bookworms Online";
}

<div class="row justify-content-center mt-4 mb-5">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="mb-3">Bookworms Online Login</h2>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <input type="hidden" asp-for="LModel.RecaptchaToken" id="recaptchaToken" />

                    <div class="mb-3">
                        <label asp-for="LModel.Email" class="form-label"></label>
                        <input asp-for="LModel.Email" class="form-control" />
                        <span asp-validation-for="LModel.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LModel.Password" class="form-label"></label>
                        <input asp-for="LModel.Password" class="form-control" />
                        <span asp-validation-for="LModel.Password" class="text-danger"></span>
                        <div class="mt-1">
                            <a asp-page="/Account/ForgotPassword">Forgot your password?</a>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="LModel.RememberMe" class="form-check-input" />
                        <label asp-for="LModel.RememberMe" class="form-check-label">Remember me</label>
                    </div>

                    <div class="d-flex align-items-center gap-2 justify-content-end">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <a asp-page="/Register" class="btn btn-link">Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://www.google.com/recaptcha/api.js?render=@Model.RecaptchaSiteKey"></script>
    <script>
        (() => {
            const siteKey = '@Model.RecaptchaSiteKey';
            const tokenField = document.getElementById('recaptchaToken');
            if (siteKey && tokenField && typeof grecaptcha !== 'undefined') {
                grecaptcha.ready(() => {
                    grecaptcha.execute(siteKey, { action: 'login' }).then(token => {
                        tokenField.value = token;
                    });
                });
            }
        })();
    </script>
}
