<!DOCTYPE html>
<html lang="en">
<head>
 <meta charset="utf-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 <title>@ViewData["Title"] - BookwormsOnlineSecurity</title>
 <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
 <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
 <link rel="stylesheet" href="~/BookwormsOnlineSecurity.styles.css" asp-append-version="true" />
</head>
<body>
 <header>
 <nav class="navbar navbar-expand-lg navbar-light bg-light">
 <div class="container">
 <a class="navbar-brand" asp-page="/Index">Bookworms Online</a>
 <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
 <span class="navbar-toggler-icon"></span>
 </button>

 <div class="collapse navbar-collapse" id="mainNavbar">
 <ul class="navbar-nav me-auto mb-2 mb-lg-0">
 <li class="nav-item">
 <a class="nav-link" asp-page="/Index">Home</a>
 </li>
 @if (User.Identity?.IsAuthenticated ?? false)
 {
 <li class="nav-item"><a class="nav-link" asp-page="/Test/BadRequest">Error400</a></li>
 <li class="nav-item"><a class="nav-link" asp-page="/Test/Throw">Error500</a></li>
 <li class="nav-item"><a class="nav-link" href="/Error/403">Error403</a></li>
 }
 </ul>

 <ul class="navbar-nav ms-auto align-items-center">
 @if (User.Identity?.IsAuthenticated ?? false)
 {
 <li class="nav-item d-flex align-items-center gap-2">
 <span class="navbar-text">Hello, @User.Identity.Name</span>
 <form asp-page="/Logout" method="post" class="m-0 p-0">
 <button type="submit" class="btn btn-link nav-link p-0" style="height: auto;">Logout</button>
 </form>
 </li>
 }
 else
 {
 <li class="nav-item">
 <a class="nav-link" asp-page="/Login">Login</a>
 </li>
 <li class="nav-item">
 <a class="nav-link" asp-page="/Register">Register</a>
 </li>
 }
 </ul>
 </div>
 </div>
 </nav>
 </header>
 <main role="main" class="flex-grow-1 pb-3">
 <div class="container mt-4">
 @RenderBody()
 </div>
 </main>

 <footer class="border-top footer text-muted mt-4">
 <div class="container py-3">
 &copy;2026 - BookwormsOnlineSecurity
 </div>
 </footer>

 <script src="~/lib/jquery/dist/jquery.min.js"></script>
 <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
 <script src="~/js/site.js" asp-append-version="true"></script>

 @await RenderSectionAsync("Scripts", required: false)
</body>
</html>