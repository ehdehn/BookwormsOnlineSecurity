@page
@model IndexModel
@{
    ViewData["Title"] = "Bookworms Online - Dashboard";
}

@if (Model.CurrentUser != null)
{
    <div class="container mt-4 mb-5">
        <div class="alert alert-danger d-flex align-items-center justify-content-between">
            <div>
                <strong>Session active.</strong> Auto-signout in <span id="countdown" data-seconds="30">30</span> seconds of inactivity.
            </div>
            <div class="small text-muted">Move or navigate to keep active.</div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-4 mb-3">
                            <div>
                                @if (!string.IsNullOrEmpty(Model.CurrentUser.PhotoPath))
                                {
                                    <img src="@Model.CurrentUser.PhotoPath" alt="Profile" class="rounded-circle profile-photo" />
                                }
                                else
                                {
                                    <div class="placeholder rounded-circle bg-light d-inline-flex align-items-center justify-content-center profile-photo text-muted">
                                        <span class="fw-bold">No Photo</span>
                                    </div>
                                }
                            </div>
                            <div class="flex-grow-1">
                                <h3 class="mb-0">@Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h3>
                                <p class="text-muted mb-0">Member</p>
                                <div class="mt-2">
                                    <a asp-page="/Account/ChangePassword" class="btn btn-secondary me-2">Change Password</a>
                                    <a asp-page="/Account/Enable2fa" class="btn btn-outline-primary">Enable2FA</a>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="row mt-3">
                            <div class="col-sm-6 mb-2">
                                <div class="text-muted">Email</div>
                                <div class="fw-bold">@Model.CurrentUser.Email</div>
                            </div>
                            <div class="col-sm-6 mb-2">
                                <div class="text-muted">Mobile</div>
                                <div class="fw-bold">@Model.CurrentUser.MobileNo</div>
                            </div>
                            <div class="col-sm-6 mb-2">
                                <div class="text-muted">Billing Address</div>
                                <div class="fw-bold">@Model.CurrentUser.BillingAddress</div>
                            </div>
                            <div class="col-sm-6 mb-2">
                                <div class="text-muted">Shipping Address</div>
                                <div class="fw-bold">@Model.CurrentUser.ShippingAddress</div>
                            </div>
                            <div class="col-sm-6 mb-2">
                                <div class="text-muted">Credit Card</div>
                                <div class="fw-bold">
                                    @{
                                        var cc = Model.CurrentUser.CreditCard ?? string.Empty;
                                        string masked = "[Not provided]";
                                        if (!string.IsNullOrEmpty(cc))
                                        {
                                            var digits = cc.Where(char.IsDigit).ToArray();
                                            var ccPlain = new string(digits);
                                            if (ccPlain.Length <= 4)
                                            {
                                                masked = ccPlain;
                                            }
                                            else
                                            {
                                                var last4 = ccPlain[^4..];
                                                masked = new string('X', ccPlain.Length - last4.Length) + last4;
                                            }
                                        }
                                    }
                                    @masked
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-5 mb-5">
        <div class="row align-items-center g-4">
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold">Welcome to Bookworms Online</h1>
                <p class="lead text-muted">Secure membership, protected sessions, strong passwords, and two-factor authentication ready when you sign in.</p>
                <ul class="list-unstyled text-muted">
                    <li>• Strong password policy & reCAPTCHA</li>
                    <li>• Session timeout with activity detection</li>
                    <li>•2FA support with authenticator apps</li>
                </ul>
                <div class="mt-3">
                    <span class="text-muted">Use the navigation bar to Login or Register.</span>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Getting started</h5>
                        <p class="card-text text-muted">Create an account or sign in from the top navigation. Once signed in, manage your profile, enable2FA, and review your account details here.</p>
                        <div class="small text-muted">Need help? Contact support.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/session-timer.js"></script>
}
