@page
@model BookwormsOnlineSecurity.Pages.Account.LoginWith2faModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
}

<div class="row justify-content-center mt-4 mb-5">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="mb-3">Two-Factor Authentication</h2>
                <p class="text-muted">Enter the 6-digit code from your authenticator app.</p>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Input.TwoFactorCode" class="form-label"></label>
                        <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="one-time-code" />
                        <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Input.RememberMachine" class="form-check-input" />
                        <label asp-for="Input.RememberMachine" class="form-check-label">Remember this device</label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Verify</button>
                        <a asp-page="/Login" class="btn btn-link">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
