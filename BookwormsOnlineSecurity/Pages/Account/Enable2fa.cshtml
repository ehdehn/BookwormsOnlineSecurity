@page
@model BookwormsOnlineSecurity.Pages.Account.Enable2faModel
@{
    ViewData["Title"] = "Enable Two-Factor Authentication";
}

<div class="row justify-content-center mt-4 mb-5">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="mb-3">Two-Factor Authentication</h2>
                <div class="row">
                    <div class="col-md-6">
                        <p class="text-muted">Scan the QR code with Microsoft Authenticator (or another TOTP app), or enter the key manually. Then enter a code from the app to confirm.</p>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Manual key</label>
                            <div class="form-control-plaintext">@Model.SharedKey</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">QR Code URI</label>
                            <div class="small text-muted">Use this URI if your authenticator supports pasting a URI directly:</div>
                            <code>@Model.AuthenticatorUri</code>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex flex-column justify-content-center align-items-center">
                        <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=@System.Net.WebUtility.UrlEncode(Model.AuthenticatorUri)" alt="QR Code" class="mb-3" />
                        <form method="post" class="w-100">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="mb-3">
                                <label asp-for="Input.Code" class="form-label"></label>
                                <input asp-for="Input.Code" class="form-control" autocomplete="one-time-code" />
                                <span asp-validation-for="Input.Code" class="text-danger"></span>
                            </div>
                            <div class="d-flex gap-2 justify-content-between">
                                <button type="submit" class="btn btn-primary">Verify and Enable</button>
                                <a asp-page="/Account/Disable2fa" class="btn btn-outline-danger">Disable2FA</a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
