@page
@model BookwormsOnlineSecurity.Pages.Account.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}
<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <h2>Password Reset Email Sent</h2>
        <p class="text-muted">If the email you entered is in our system, a reset link has been sent.</p>
        <a asp-page="/Login" class="btn btn-primary">Back to Login</a>
    </div>
</div>
